{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string"
    },
    "hubHost": {
      "type": "string"
    }
  },
  "resources": [
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "location": "[resourceGroup().location]",
      "apiVersion": "2018-06-01",
      "properties": {
        "containers": [
          {
            "name": "[concat('selenium-node-firefox')]",
            "properties": {
              "image": "selenium/node-firefox",
              "ports": [
                {
                  "port": "4444",
                  "protocol": "TCP"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "1.0",
                  "memoryInGb": "1.5"
                }
              },
              "volumeMounts": [
                {
                  "name": "devshm",
                  "mountPath": "/dev/shm"
                }
              ],
              "environmentVariables": [
                {
                  "name": "HUB_HOST",
                  "value": "[parameters('hubHost')]"
                }
              ]
            }
          }
        ],
        "ipAddress": {
          "ports": [
            {
              "port": "4444",
              "protocol": "TCP"
            }
          ],
          "type": "Public"
        },
        "osType": "Linux",
        "volumes": [
          {
            "name": "devshm",
            "emptyDir": {}
          }
        ]
      }
    }
  ]
}